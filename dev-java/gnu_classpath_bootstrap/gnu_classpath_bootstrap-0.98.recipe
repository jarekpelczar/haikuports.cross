ARCHITECTURES="x86 x86_64 ppc arm arm64 riscv64 sparc"

PROVIDES="
	gnu_classpath_bootstrap = $portVersion
"
REQUIRES="
	haiku
"
BUILD_REQUIRES="
"
BUILD_PREREQUIRES="
	haiku_devel
	gcc_cross_$targetArchitecture
	binutils_cross_$targetArchitecture
	cmd:find
	cmd:gcc
	cmd:ld
	cmd:aclocal
	cmd:autoconf
	cmd:${targetMachineTripleAsName}_libtoolize
	cmd:make
"

SOURCE_DIR="classpath-0.98"

PATCHES="gnu_classpath-0.98.patch"

BUILD()
{
	${targetMachineTriple}-libtoolize --force --copy --install
	aclocal -I m4
	autoconf
	runConfigure ./configure \
		--host=$targetMachineTriple \
		--build=$buildMachineTriple \
		--disable-gtk-peer \
		--disable-alsa \
		--disable-plugin \
		--disable-gconf-peer \
		--disable-gjdoc \
		LDFLAGS="-lnetwork"
	make $jobArgs
}

INSTALL()
{
	make DESTDIR=$installDestDir install
}

TEST()
{
	:
